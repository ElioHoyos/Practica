<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TAREACASA.view.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="Blue"></Grid>
            <Label HorizontalOptions="CenterAndExpand" Text="Login" TextColor="White" FontSize="60" HeightRequest="100"/>
            
            <Entry Placeholder="Usuario" TextColor="White" x:Name="txtUsuario"/>
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="txtContraseña" TextColor="White"/>
            <Button Text="Iniciar Sesion" TextColor="Aquamarine" Clicked="Button_Clicked"/>
            <Button Text="Registrar" TextColor="Aqua" />
            
            <Label Text="" x:Name="lblresultado" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
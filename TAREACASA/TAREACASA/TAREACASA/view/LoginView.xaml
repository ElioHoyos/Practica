<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TAREACASA.view.LoginView">
    <ContentPage.Content>
        <StackLayout>
             <Frame BackgroundColor="Azure"
                   BorderColor="Black"
                   Margin="20"
                   CornerRadius="20">
            <StackLayout>
                <Label Text="LOGIN" TextColor="Black"/>
            <Entry Placeholder="Correo" TextColor="Blue" x:Name="txtCorreo"/>
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="txtContraseña"  TextColor="Blue"/>
            <Button Text="Iniciar Sesion" Clicked="Button_Clicked"/>
                <Label Text="" x:Name="lblResultado" TextColor="Red"/>
            </StackLayout>
        </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
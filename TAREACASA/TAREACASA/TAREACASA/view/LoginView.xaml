<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TAREACASA.view.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="#ffff"></Grid>
            <Label HorizontalOptions="CenterAndExpand" Text="BIENVENIDO AL LOGIN" TextColor="Gray" FontSize="Body" HeightRequest="80" Padding="20"/>

            <Entry Placeholder="Correo Electronico:__________________________________" TextColor="Black" PlaceholderColor="Aqua"></Entry>
            <Entry Placeholder="Contraseña:__________________________________" TextColor="Black" PlaceholderColor="Aqua"></Entry>
            <Button x:Name="Button1" Text="Iniciar Sesión" TextColor="Blue" Clicked="Button1_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>